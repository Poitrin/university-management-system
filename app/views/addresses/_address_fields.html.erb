<div uk-grid>
  <div class="uk-width-1-2@m">
    <%= f.input :line1 %>
  </div>
</div>

<div uk-grid>
  <div class="uk-width-1-2@m">
    <%= f.input :line2 %>
  </div>
</div>

<div uk-grid>
  <div class="uk-width-1-6@m">
    <%= f.input :postal_code %>
  </div>
  <div class="uk-width-1-3@m">
    <%= f.input :city %>
  </div>
</div>

<div uk-grid>
  <div class="uk-width-1-2@m">
    <%= f.input :country_id,
                collection: Country.all.order("name_#{locale.to_s.downcase}"),
                label_method: :name_localized %>
  </div>
</div>